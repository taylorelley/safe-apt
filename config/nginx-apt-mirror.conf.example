# Nginx configuration for safe-apt mirror
# Place this file in /etc/nginx/sites-available/ and symlink to sites-enabled/
#
# Example:
#   sudo cp nginx-apt-mirror.conf /etc/nginx/sites-available/apt-mirror
#   sudo ln -s /etc/nginx/sites-available/apt-mirror /etc/nginx/sites-enabled/
#   sudo nginx -t
#   sudo systemctl reload nginx

server {
    listen 80;
    listen [::]:80;
    server_name apt.internal.example.com;

    # Redirect HTTP to HTTPS
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name apt.internal.example.com;

    # SSL certificate configuration
    # Replace with your actual certificate paths
    ssl_certificate /etc/ssl/certs/apt-mirror.crt;
    ssl_certificate_key /etc/ssl/private/apt-mirror.key;

    # SSL security settings
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;

    # Security headers
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-Frame-Options "DENY" always;

    # APT repository root
    root /var/lib/aptly/public;

    # Directory indexing (optional, helpful for debugging)
    autoindex on;
    autoindex_exact_size off;
    autoindex_localtime on;

    # Logging
    access_log /var/log/nginx/apt-mirror-access.log;
    error_log /var/log/nginx/apt-mirror-error.log;

    # Repository location
    location / {
        # Allow directory listings
        autoindex on;

        # Disable caching for Release files
        location ~ /(InRelease|Release|Release.gpg)$ {
            add_header Cache-Control "no-cache, no-store, must-revalidate";
            add_header Pragma "no-cache";
            add_header Expires "0";
        }

        # Cache package files (they are immutable)
        location ~ /.*\.(deb|udeb|tar\.gz|tar\.xz|tar\.bz2|diff\.gz)$ {
            add_header Cache-Control "public, max-age=86400";
        }
    }

    # Health check endpoint
    location /health {
        access_log off;
        add_header Content-Type text/plain;
        return 200 "OK\n";
    }

    # Deny access to hidden files
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }
}
